{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "timezone": "UTC",
  "schedule": [
    "before 6am on Monday"
  ],
  "labels": [
    "dependencies"
  ],
  "assignees": [],
  "packageRules": [
    {
      "description": "Zig language updates",
      "matchPackageNames": [
        "ziglang/zig"
      ],
      "groupName": "Zig",
      "automerge": false,
      "stabilityDays": 3,
      "prPriority": 10
    },
    {
      "description": "GitHub Actions updates",
      "matchManagers": [
        "github-actions"
      ],
      "groupName": "GitHub Actions",
      "automerge": true,
      "automergeType": "pr",
      "matchUpdateTypes": [
        "minor",
        "patch"
      ],
      "stabilityDays": 3
    }
  ],
  "vulnerabilityAlerts": {
    "labels": [
      "security"
    ],
    "assignees": [],
    "prPriority": 20
  },
  "prConcurrentLimit": 10,
  "prCreation": "immediate",
  "prHourlyLimit": 0,
  "rebaseWhen": "behind-base-branch",
  "semanticCommits": "enabled",
  "commitMessagePrefix": "chore(deps):",
  "commitMessageAction": "update",
  "commitMessageTopic": "{{depName}}",
  "commitMessageExtra": "to {{#if isPinDigest}}{{{newDigestShort}}}{{else}}{{#if isMajor}}{{prettyNewMajor}}{{else}}{{#if isSingleVersion}}{{prettyNewVersion}}{{else}}{{#if newValue}}{{{newValue}}}{{else}}{{{newDigestShort}}}{{/if}}{{/if}}{{/if}}{{/if}}",
  "lockFileMaintenance": {
    "enabled": false
  },
  "customManagers": [
    {
      "customType": "regex",
      "description": "Update Zig version in workflows",
      "fileMatch": [
        "^\\.github/workflows/.*\\.ya?ml$"
      ],
      "matchStrings": [
        "version:\\s*['\"]?(?<currentValue>\\d+\\.\\d+\\.\\d+)['\"]?\\s*(?:#.*)?\\n"
      ],
      "depNameTemplate": "ziglang/zig",
      "datasourceTemplate": "github-releases",
      "versioningTemplate": "semver"
    },
    {
      "customType": "regex",
      "description": "Update Zig version in README",
      "fileMatch": [
        "^README\\.md$",
        "^CLAUDE\\.md$"
      ],
      "matchStrings": [
        "Zig\\s+(?<currentValue>\\d+\\.\\d+\\.\\d+)"
      ],
      "depNameTemplate": "ziglang/zig",
      "datasourceTemplate": "github-releases",
      "versioningTemplate": "semver"
    }
  ]
}
